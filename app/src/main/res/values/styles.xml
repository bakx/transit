<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.

        <item name="android:divider">#006993</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">#F26222</item>

        @android:color/transparent

        -->

    </style>

    <!-- Navigation Drawer -->
    <style name="MainNavigationDrawer">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">#F26222</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="MainNavigationDrawerImage">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MainNavigationDrawerText">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Route Item -->
    <style name="RouteDateTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:background">#F26222</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ItemRouteNumberTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff2e2e2e</item>
    </style>

    <style name="ItemRouteNameTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff2e2e2e</item>
    </style>

    <style name="ItemRouteHeadingTextView">
        <item name="android:textColor">#ff484848</item>
    </style>

</resources>
